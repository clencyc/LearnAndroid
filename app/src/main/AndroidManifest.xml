<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnState"
        tools:targetApi="31">
        <activity
            android:name=".WellnessTaskList"
            android:exported="false"
            android:label="@string/title_activity_wellness_task_list"
            android:theme="@style/Theme.LearnState" />
        <activity
            android:name=".WellnessTask"
            android:exported="false"
            android:label="@string/title_activity_wellness_task"
            android:theme="@style/Theme.LearnState" />
        <activity
            android:name=".WellnessViewModel"
            android:exported="false"
            android:label="@string/title_activity_wellness_view_model"
            android:theme="@style/Theme.LearnState" />
        <activity
            android:name=".WellnessTaskItem"
            android:exported="false"
            android:label="@string/title_activity_wellness_task_item"
            android:theme="@style/Theme.LearnState" />
        <activity
            android:name=".WaterCounter"
            android:exported="false"
            android:label="@string/title_activity_water_counter"
            android:theme="@style/Theme.LearnState" />
        <activity
            android:name=".WellnessScreen"
            android:exported="false"
            android:label="@string/title_activity_wellness_screen"
            android:theme="@style/Theme.LearnState" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LearnState">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>